    # Declare launch arguments
    declared_arguments = [
        DeclareLaunchArgument(
            'namespace',
            default_value='ego_racecar',
            description='Robot namespace'
        ),
        DeclareLaunchArgument(
            'use_sim_time',
            default_value='false',
            description='Use simulation time'
        ),
