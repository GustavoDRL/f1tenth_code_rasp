        Node(
            package='vesc_ackermann',
            executable='ackermann_to_vesc_node',
            name='ackermann_to_vesc',
            namespace=LaunchConfiguration('namespace'),
            parameters=[vesc_config],
            remappings=[
                ('ackermann_cmd', 'drive'),
            ]
        ),

