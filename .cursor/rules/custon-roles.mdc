                'enable_button': 4        # Left bumper
            }],
            remappings=[
                ('joy', '/joy'),
                ('drive', 'drive')
            ]
        )
    ])

    # Delayed startup for sensors (allow hardware initialization)
    delayed_sensors = TimerAction(
        period=3.0,  # 3 second delay
        actions=[lidar_node]
    )

    return LaunchDescription(
        declared_arguments +
        global_params +
        [
            hardware_nodes,
            static_transforms,
            safety_node,
            joystick_nodes,
            delayed_sensors
        ]
    )
